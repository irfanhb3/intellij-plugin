<idea-plugin>
  <version>1.0-SNAPSHOT</version>
  <change-notes>
      Add change notes here.&lt;br&gt;
      &lt;em&gt;most HTML tags may be used&lt;/em&gt;</change-notes>
  <id>plugin.plugin</id>
  <name>My First Plug</name>
  <vendor email="irfanhb3@gmail.com">Irfan</vendor>
  <description>Just trying out some plugin creation stuff&gt;</description>
  <depends>Git4Idea</depends>
  <extensions defaultExtensionNs="com.intellij">
    <defaultProjectTypeProvider type="Android"/>
    <projectConfigurable instance="settings.JiraSettings"/>
  </extensions>
  <application-components>
    <component>
      <implementation-class>
                components.MyComponent
            </implementation-class>
    </component>
    <component>
      <implementation-class>
                components.JiraComponent
            </implementation-class>
    </component>
  </application-components>
  <actions>
    <group id="plugin.TopMenu" text="_Plugin" description="MyPlugin Toolbar Menu">
      <add-to-group group-id="MainMenu" anchor="last"/>
      <action id="actions.MyAction" class="actions.MyAction" text="_MyAction" description="actions.MyAction"/>
    </group>
    <group id="MediumMenu" text="_Medium" description="Medium" popup="true">
      <group id="MediumInsideMenu" text="_Medium" description="Medium">
        <action id="JiraMoveIssue" class="actions.jiraAction.JiraMoveAction" text="Move Issue" description="Move Issue in Jira">
          <keyboard-shortcut first-keystroke="control alt k" keymap="$default"/>
        </action>
      </group>
      <add-to-group group-id="ProjectViewPopupMenu" relative-to-action="RefactoringMenu" anchor="before"/>
    </group>
  </actions>
</idea-plugin>
